{
  "compilerOptions": {
    "target": "ES6",  // Use ES6 target for compatibility
    "module": "commonjs",  // Use CommonJS for modules
    "moduleResolution": "node",  // Ensures compatibility with Node.js resolution
    "esModuleInterop": true,  // Enables compatibility between CommonJS and ES Modules
    "outDir": "./dist",  // Output compiled files to the `dist` folder
    "rootDir": "./src",  // The root folder for source files
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["src/**/*.ts"],  // Include all `.ts` files in `src/`
  "exclude": ["node_modules", "**/*.test.ts"]  // Exclude `node_modules` and test files
}
